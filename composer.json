{
    "name": "mmoreram/simple-doctrine-mapping",
    "description": "Simple Doctrine Mapping ",
    "keywords": [
        "doctrine",
        "mapping",
        "mmoreram"
    ],
    "homepage": "https://github.com/mmoreram/SimpleDoctrineMapping",
    "type": "library",
    "license": "MIT",
    "support": {
        "email": "yuhu@mmoreram.com",
        "forum": "https://gitter.im/mmoreram/SimpleDoctrineMapping",
        "source": "https://github.com/mmoreram/SimpleDoctrineMapping",
        "issues": "https://github.com/mmoreram/SimpleDoctrineMapping/issues"
    },
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "SimpleDoctrineMapping Community",
            "homepage": "https://github.com/mmoreram/SimpleDoctrineMapping/contributors"
        }
    ],
    "require": {
        "php": "^7.1",
        "doctrine/common": "^2.6",
        "doctrine/orm": "^2.5",
        "symfony/http-kernel": "^3.2",
        "symfony/dependency-injection": "^3.2"
    },
    "require-dev": {
        "symfony/framework-bundle": "^3.2",
        "doctrine/doctrine-bundle": "^1.6.4",
        "mmoreram/base-bundle": "dev-master",
        "friendsofphp/php-cs-fixer": "1.12.4",
        "mmoreram/php-formatter": "^1.2.0",
        "phpunit/phpunit": "^5.6.4"
    },
    "autoload": {
        "psr-4": {
            "Mmoreram\\SimpleDoctrineMapping\\": ""
        }
    },
    "scripts": {
        "fix-code": [
            "vendor/bin/php-cs-fixer fix --config-file=.php_cs",
            "vendor/bin/php-formatter f:h:f .",
            "vendor/bin/php-formatter f:s:f .",
            "vendor/bin/php-formatter f:u:s ."
        ],
        "test": "vendor/bin/phpunit"
    }
}
